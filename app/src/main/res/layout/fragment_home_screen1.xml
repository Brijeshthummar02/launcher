<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_tablet_navigation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_egra_oral_vocabulary" />

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_egma_oral_counting" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_egra_phonemic_awareness" />

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/item_egma_number_identification" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/egraLetterIdentificationContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/egraLetterIdentificationImageView"
                android:layout_width="@dimen/spaceship_width"
                android:layout_height="@dimen/spaceship_height"
                android:src="@drawable/egra_unlocked" />

            <ImageView
                android:layout_width="@dimen/skill_image_width"
                android:layout_height="@dimen/skill_image_height"
                android:layout_marginTop="@dimen/skill_image_margin_top"
                android:layout_marginLeft="@dimen/skill_image_margin_left"
                android:src="@drawable/egra_letter_identification" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egmaMissingNumberContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/egmaMissingNumberImageView"
                android:layout_width="@dimen/spaceship_width"
                android:layout_height="@dimen/spaceship_height"
                android:src="@drawable/egma_unlocked" />

            <ImageView
                android:layout_width="@dimen/skill_image_width"
                android:layout_height="@dimen/skill_image_height"
                android:layout_marginTop="@dimen/skill_image_margin_top"
                android:layout_marginLeft="@dimen/skill_image_margin_left"
                android:src="@drawable/egma_missing_number" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>