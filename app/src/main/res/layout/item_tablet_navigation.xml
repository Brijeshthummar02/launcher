<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabletNavigationContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tabletNavigationImageView"
        android:layout_width="@dimen/spaceship_width"
        android:layout_height="@dimen/spaceship_height"
        android:src="@drawable/tablet_navigation_earth" />

    <ImageView
        android:layout_width="@dimen/skill_image_width"
        android:layout_height="@dimen/skill_image_height"
        android:layout_centerInParent="true"
        android:src="@drawable/tablet_navigation" />
</RelativeLayout>